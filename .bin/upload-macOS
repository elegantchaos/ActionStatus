source Dependencies/ReleaseTools/Scripts/make-tools

echo " "
echo "***************"
echo "Uploading macOS"
echo "***************"

rt set scheme ActionStatus-macOS --platform macOS
rt archive --xcconfig Sources/ActionStatus/Resources/SkipSparkle.xcconfig --show-output 2> /dev/null | xcpretty
rt export --platform=macOS
rt upload --platform=macOS
