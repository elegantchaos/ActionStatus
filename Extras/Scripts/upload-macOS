#!/bin/bash
# Purpose: Submit macOS build using ReleaseTools and push tags.
# Usage: Extras/Scripts/upload-macOS

set -euo pipefail

ROOT="$(cd "$(dirname "$0")/../.." && pwd)"
RT="$ROOT/Extras/Scripts/rt"

echo " "
echo "****************"
echo "Submitting macOS"
echo "****************"
"$RT" submit --platform=macOS --scheme=ActionStatus
git -C "$ROOT" push --tags --force
