#!/bin/bash
# Purpose: Submit iOS build using ReleaseTools and push tags.
# Usage: Extras/Scripts/upload-iOS

set -euo pipefail

ROOT="$(cd "$(dirname "$0")/../.." && pwd)"
RT="$ROOT/Extras/Scripts/rt"

echo " "
echo "**************"
echo "Submitting iOS"
echo "**************"
"$RT" submit --platform=iOS --scheme=ActionStatus
git -C "$ROOT" push --tags --force
