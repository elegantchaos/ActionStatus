source "bootstrap-tools"

echo " "
echo "*************"
echo "Uploading iOS  "
echo "*************"

$RT set scheme ActionStatus --platform=iOS 
$RT archive --platform=iOS --show-output 2> /dev/null | xcpretty
$RT export --platform=iOS
$RT upload --platform=iOS

#open "https://appstoreconnect.apple.com/apps/1519213388/testflight/ios/"
