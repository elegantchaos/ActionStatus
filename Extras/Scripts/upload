#!/bin/bash
# Purpose: Submit iOS and tvOS builds using ReleaseTools and push tags.
# Usage: Extras/Scripts/upload

set -euo pipefail

ROOT="$(cd "$(dirname "$0")/../.." && pwd)"
RT="$ROOT/Extras/Scripts/rt"

echo " "
echo "**************"
echo "Submitting iOS"
echo "**************"
"$RT" submit --platform=iOS --scheme=ActionStatus

echo " "
echo "***************"
echo "Submitting tvOS"
echo "***************"
"$RT" submit --platform=tvOS --scheme=ActionStatus-tvOS

echo "------------"
echo "Pushing Tags"
echo "------------"
git -C "$ROOT" push --tags --force
