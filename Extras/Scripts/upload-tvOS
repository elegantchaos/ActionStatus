#!/bin/bash
# Purpose: Submit tvOS build using ReleaseTools and push tags.
# Usage: Extras/Scripts/upload-tvOS

set -euo pipefail

ROOT="$(cd "$(dirname "$0")/../.." && pwd)"
RT="$ROOT/Extras/Scripts/rt"

echo " "
echo "***************"
echo "Submitting tvOS"
echo "***************"
"$RT" submit --platform=tvOS --scheme=ActionStatus-tvOS
git -C "$ROOT" push --tags --force
